{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "lib": [
      "es6",
      "DOM",
      "es2017"
    ],
    "target": "ES5",
    "experimentalDecorators": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ]
}